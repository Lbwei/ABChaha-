/* pages/receive/receive.wxss */
.container {
  position: relative;
  width: 100%;
  height: 100%;
}

.bg-view {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.bg-view image {
  width: 100%;
  height: 100%;
}

.back {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 100rpx;
  margin: auto;
  width: 309rpx;
  height: 77rpx;
}

.back button {
  width: 100%;
  height: 100%;
  border-radius: 50rpx;
  background: transparent;
}

.back image {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
}

.change {
  margin-top: 2rpx;
  opacity: 0.8
}